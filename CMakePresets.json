{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19
    },
    "configurePresets": [
        {
            "name": "debug",
            "description": "Debug build with debug symbols",
            "generator": "Ninja",
            "binaryDir": "build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "description": "Release build with optimizations",
            "generator": "Ninja",
            "binaryDir": "build/Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug" //it can be any debug or anything
            }
        }
    ],
    /// these are the commands
    //cmake --preset debug    # Uses Debug configuration
    //cmake --preset release  # Uses Release configuration
    //cmake --build build/debug   # Build Debug version
    //cmake --build build/release # Build Release version
